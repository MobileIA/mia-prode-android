<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_background_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:background="@color/prodeRed"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/image_user_two"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar_three_gray"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/text_pos_two"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:background="@drawable/background_circle_position"
                android:layout_alignBottom="@+id/image_user_two"
                android:layout_marginBottom="-10dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/image_user_two"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/text_user_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                     />

                <TextView
                    android:id="@+id/points_user_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorGray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>





        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/image_user_one"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/avatar_three_gray"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/text_pos_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:background="@drawable/background_circle_position"
                android:layout_alignBottom="@+id/image_user_one"
                android:layout_marginBottom="-10dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/image_user_one"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/text_user_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/points_user_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorGray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/image_user_three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/avatar_three_gray"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/text_pos_three"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"
                android:background="@drawable/background_circle_position"
                android:layout_alignBottom="@+id/image_user_three"
                android:layout_marginBottom="-10dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/image_user_three"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/text_user_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/points_user_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorGray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>